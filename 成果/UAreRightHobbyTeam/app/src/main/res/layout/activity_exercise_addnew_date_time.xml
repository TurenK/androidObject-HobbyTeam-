<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/time_bg"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.activitys.Exercise.ExerciseAddnewActivity">

    <LinearLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleBarSize"
        android:background="@color/head"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/backBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="@color/head"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="@dimen/titleButton" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:gravity="center_horizontal|center_vertical"
            android:text="选择活动时间"
            android:textColor="@color/white"
            android:textSize="23sp" />
    </LinearLayout>

    <DatePicker
        android:id="@+id/datepicker"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:calendarViewShown="false" />

    <TimePicker
        android:id="@+id/timepicker"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp" />

    <Button
        android:id="@+id/submitBTN"
        android:layout_width="@dimen/registerBtnWeight"
        android:layout_height="@dimen/registerBtnHeight"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="60dp"
        android:background="@color/head"
        android:text="确定"
        android:textColor="@color/white" />
</LinearLayout>