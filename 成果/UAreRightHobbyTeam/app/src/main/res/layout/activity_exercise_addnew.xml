<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/addact_bg"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleBarSize"
        android:background="@color/head"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/backBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="@color/head"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="@dimen/titleButton" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:gravity="center_horizontal|center_vertical"
            android:text="添加活动"
            android:textColor="@color/white"
            android:textSize="23sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ActNameFrame"
            android:layout_width="260dp"
            android:layout_height="@dimen/editTextHeight"
            android:gravity="center">

            <FrameLayout
                android:id="@+id/NameFrame"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/NameEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@mipmap/register_edit_bg"
                    android:drawableLeft="@mipmap/create1"
                    android:drawablePadding="@dimen/editPadding"
                    android:hint="请输入活动名称"
                    android:inputType="text"
                    android:textSize="@dimen/editText" />
            </FrameLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/ActTimeFrame"
            android:layout_width="260dp"
            android:layout_height="@dimen/editTextHeight">

            <Button
                android:id="@+id/TimeFrame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@mipmap/register_edit_bg"
                android:drawableLeft="@mipmap/create2"
                android:drawablePadding="@dimen/editPadding"
                android:gravity="start|center_vertical"
                android:hint="请点击选择活动时间"
                android:inputType="text"
                android:textSize="@dimen/editText" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/ActPostFrame"
            android:layout_width="260dp"
            android:layout_height="@dimen/editTextHeight">

            <Button
                android:id="@+id/PostEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@mipmap/register_edit_bg"
                android:drawableLeft="@mipmap/create3"
                android:drawablePadding="@dimen/editPadding"
                android:gravity="start|center_vertical"
                android:hint="请点击选择活动地点"
                android:inputType="text"
                android:textSize="@dimen/editText" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/exercise_add_tagframe"
            android:layout_width="260dp"
            android:layout_height="@dimen/editTextHeight">

            <Button
                android:id="@+id/exercise_add_tagtext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@mipmap/register_edit_bg"
                android:drawableLeft="@mipmap/create4"
                android:drawablePadding="@dimen/editPadding"
                android:gravity="start|center_vertical"
                android:hint="请点击选择活动标签"
                android:inputType="text"
                android:textSize="@dimen/editText" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/ActContentFrame"
            android:layout_width="260dp"
            android:layout_height="@dimen/editTextHeight">

            <EditText
                android:id="@+id/ContentEditTip"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@mipmap/register_edit_bg"
                android:drawableLeft="@mipmap/create5"
                android:drawablePadding="@dimen/editPadding"
                android:hint="请输入活动详情"
                android:inputType="text"
                android:textSize="@dimen/editText" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/empty_team_add"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal" />

        <ImageView
            android:id="@+id/picture"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@mipmap/image_bg"
            android:textColor="@color/white" />

        <LinearLayout
            android:id="@+id/empty_team_add"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal" />

        <Button
            android:id="@+id/submitBTN"
            android:layout_width="@dimen/registerBtnWeight"
            android:layout_height="@dimen/registerBtnHeight"
            android:background="@color/head"
            android:text="确定"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>