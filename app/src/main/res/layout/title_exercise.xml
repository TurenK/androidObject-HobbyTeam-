<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/titleBarSize"
    android:background="@color/colorWhite"
    android:gravity="start|center_vertical"
    >

    <ImageView
        android:id="@+id/iv_event_search"
        android:layout_width="0dp"
        android:layout_weight="0.1"
        android:layout_height="match_parent"
        android:src="@android:drawable/ic_search_category_default"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.8"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        >
        <Spinner
            android:id="@+id/title_Spinner"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:entries="@array/ExeChoose"
           android:background="@color/colorWhite"
            android:gravity="center_horizontal|center_vertical"
            />
        <TextView
            android:id="@+id/title_Recommend"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@string/推荐"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/titleText"
            android:gravity="center_horizontal|center_vertical"
            />
        <TextView
            android:id="@+id/title_Nearby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="50dp"
            android:text="@string/附近"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/titleText"
            android:gravity="center_horizontal|center_vertical"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/title_More"
        android:gravity="center_horizontal"
        android:layout_width="0dp"
        android:layout_weight="0.1"
        android:layout_height="match_parent"
        android:text="..."
        android:textColor="@color/colorBlack"
        android:textSize="30sp"
        />


</LinearLayout>
